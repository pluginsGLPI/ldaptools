{% if not can_use %}
    <div class="center warning" style="width: 40%; margin: auto;">
        <i class="fa fa-exclamation-triangle fa-3x"></i>
        <p>{{ _x('error', __("The LDAP extension of your PHP parser isn't installed")) }}</p>
    </div>
{% else %}
    <div class="center">
        <table class="tab_cadre">
            <thead>
                <tr>
                    <th>{{ __('LDAP Tools', 'ldaptools') }}</th>
                    <th>{{ __('Comment') }}</th>
                </tr>
            </thead>
            <tbody>
                {% for filepath in filepaths %}
                    {% if filepath.link is defined and filepath.name is defined %}
                        <tr>
                            <td>
                                <a href="{{ filepath.link }}">{{ filepath.name }}</a>
                            </td>
                            {% if filepath.comment is defined %}
                                <td>
                                    {{ filepath.comment }}
                                </td>
                            {% else %}
                                <td>{{ __('No comments') }}</td>
                            {% endif %}
                        </tr>
                    {% endif %}
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endif %}
